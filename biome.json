{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			".next/*",
			".trunk/*",
			"node_modules/*",
			"package-lock.json",
			"package.json",
			".git/*",
			".gitignore"
		],
		"include": ["app/*"],
		"ignoreUnknown": true
	}
}
